<div class="row" style="border:2px solid #000;">
    <table>
        <thead>
            <tr>
            {% for header in account.transactionColumns %}
                {% if header=='Transaction' %}
                    <th class="less-padding inverted-colour">{{header}}</th>
                {% else %}
                    <th class="less-padding inverted-colour align-right">{{header}}<br>Date</th>
                {% endif %}
            {% endfor %}
            </tr>
        </thead>

        <tbody>
            {% for transaction in transactions %}
            <tr>
                {% for column in transaction.columns %}
                    {% if column=='undefined' %}
                        <td class="{{"less-padding" if loop.index0 else "less-padding align-right"}}"></td>
                    {% elif column=='R0' %}
                        <td class="less-padding"></td>
                    {% else %}
                        <td class="{{"less-padding" if not loop.index0 else "less-padding align-right"}}">{{ column }}</td>
                    {% endif %}
                {% endfor %}
            </tr> 
            {% endfor %}
        </tbody>
    </table>
</div>
